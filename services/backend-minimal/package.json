{
  "name": "beterminal-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend minimal para Stripe Terminal (Tap to Pay) - BeTerminal",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "restart": "./restart.sh",
