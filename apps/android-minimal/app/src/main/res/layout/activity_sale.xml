<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SaleActivity">

    <!-- Area del monto - 30% de la pantalla -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#f8f9fa"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#2c3e50"
            tools:text="$25.00" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Describe tu venta"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="#6c757d"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvEventInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="#6c757d"
            android:layout_marginTop="4dp"
            tools:text="Evento: EVT001" />

    </LinearLayout>

    <!-- Area del teclado - 60% de la pantalla -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:padding="12dp">

        <GridLayout
            android:id="@+id/keysGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:alignmentMode="alignBounds"
            android:columnCount="3"
            android:rowCount="4"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/key1"
                style="@style/KeypadButton"
                android:tag="1"
                android:text="1" />
            <Button
                android:id="@+id/key2"
                style="@style/KeypadButton"
                android:tag="2"
                android:text="2" />
            <Button
                android:id="@+id/key3"
                style="@style/KeypadButton"
                android:tag="3"
                android:text="3" />

            <Button
                android:id="@+id/key4"
                style="@style/KeypadButton"
                android:tag="4"
                android:text="4" />
            <Button
                android:id="@+id/key5"
                style="@style/KeypadButton"
                android:tag="5"
                android:text="5" />
            <Button
                android:id="@+id/key6"
                style="@style/KeypadButton"
                android:tag="6"
                android:text="6" />

            <Button
                android:id="@+id/key7"
                style="@style/KeypadButton"
                android:tag="7"
                android:text="7" />
            <Button
                android:id="@+id/key8"
                style="@style/KeypadButton"
                android:tag="8"
                android:text="8" />
            <Button
                android:id="@+id/key9"
                style="@style/KeypadButton"
                android:tag="9"
                android:text="9" />

            <Button
                android:id="@+id/key00"
                style="@style/KeypadButton"
                android:tag="00"
                android:text="00" />
            <Button
                android:id="@+id/key0"
                style="@style/KeypadButton"
                android:tag="0"
                android:text="0" />
            <Button
                android:id="@+id/keyBackspace"
                style="@style/KeypadButton"
                android:text="⌫" />

        </GridLayout>

    </LinearLayout>

    <!-- Area del botón - 10% de la pantalla -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnContinuar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CONTINUAR"
            android:enabled="false"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

